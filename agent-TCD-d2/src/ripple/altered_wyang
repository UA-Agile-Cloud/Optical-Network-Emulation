new_file1 = open('ripple_altered_g.txt', 'a')
for value in ripple7:
	new_file1.write(str(value) + '\n')

new_file1 = open('ripple_altered_h.txt', 'a')
for value in ripple8:
	new_file1.write(str(value) + '\n')


