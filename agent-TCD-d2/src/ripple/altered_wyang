#!/usr/bin/env python


data = open('ripple_function_dB.txt')
ripplea = [float(x.strip()) for x in data.readlines()]

ripple1 = [value - 0.2 for value in ripplea]
ripple2 = [value + 1.7 for value in ripplea]
ripple3 = [value - 0.4 for value in ripplea]
ripple4 = [value + 0.7 for value in ripplea]
ripple5 = [value + 0.5 for value in ripplea]
ripple6 = [value + 1.5 for value in ripplea]
ripple7 = [value + 1.8 for value in ripplea]
ripple8 = [value + 1.9 for value in ripplea]


new_file1 = open('ripple_altered_a.txt', 'a')
for value in ripple1:
	new_file1.write(str(value) + '\n')

new_file1 = open('ripple_altered_b.txt', 'a')
for value in ripple2:
	new_file1.write(str(value) + '\n')

